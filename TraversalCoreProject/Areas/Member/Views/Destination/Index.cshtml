@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card pb-10">
                <div class="card-header text-center pb-5">
                    <h1 class="font-weight-bolder">Destinations</h1>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-2">
                        <table class="table table-striped align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="">#</th>
                                    <th class="">City</th>
                                    <th class="">Day Nigth</th>
                                    <th class=" p-2">Capacity</th>
                                    <th class="">Price</th>
                                    <th class="">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    <tr>
                                        <td>@item.DestinationID</td>
                                        <td >@item.City</td>
                                        <td>@item.DayNight</td>
                                        <td class="p-2">@item.Capacity</td>
                                        <td>@item.Price TL</td>
                                        <td><a asp-controller="Destination" asp-action="DestinationDetail" asp-route-id="@item.DestinationID" class="btn btn-success">Detail</a></td>
                                    </tr>
                                   
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@model Reservation
@{
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Create New Reservation</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Here you can create new reservation.</p>
                    <form method="post">
                        <div class="form-group">
                            @Html.Label("Destiantion")
                            @Html.DropDownListFor(x => x.DestinationID, (List<SelectListItem>)ViewBag.destinationList, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.Label("Person Count")
                            <input class="form-control" type="text" asp-for="PersonCount" />
                        </div>
                        <div class="form-group">
                            @Html.Label("Reservation Date")
                            <input class="form-control"  type="date" asp-for="ReservationDate" />
                        </div>
                        <div class="form-group">
                            @Html.Label("Description")
                            <input class="form-control" type="text" asp-for="Description" />
                        </div>
                        <button type="button" class="btn btn-primary btn-lg">Done</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
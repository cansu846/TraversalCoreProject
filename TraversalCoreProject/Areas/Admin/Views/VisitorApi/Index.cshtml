@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container flex-grow-1 container-p-y ">

    <div class="card mt-3">
        <h5 class="card-header">Visitors</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Mail</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.VisitorId</td>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td><span class="badge bg-label-primary me-1"> @item.City / @item.Country</span></td>
                            <td>@item.Mail</td>
                            <td>
                                <a asp-area="Admin"
                                   asp-controller="VisitorApi"
                                   asp-action="DeleteVisitor"
                                   asp-route-id="@item.VisitorId"
                                   class="btn btn-danger small">
                                    Delete
                                </a>
                            </td>
                            <td>
                                <a asp-area="Admin"
                                   asp-controller="VisitorApi"
                                   asp-action="UpdateVisitor"
                                   asp-route-id="@item.VisitorId"
                                   class="btn btn-success small">
                                    Update
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <div class="flex justify-content-end">
                <a href="/Admin/VisitorApi/AddVisitor" class="btn btn-primary lg m-3">Add</a>

            </div>
        </div>
    </div>
</div>


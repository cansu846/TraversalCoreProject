@model UpdateVisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>UpdateVisitor</h1>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container col-md-10">
        <div class="card mb-4">
            <h5 class="card-header">Update Visitor</h5>

            <div class="card-body">
                <form method="post" asp-action="UpdateVisitor">
                    <input type="hidden" asp-for="VisitorId"/>
                    <div class="form-group" mb-5">
                        <label class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Surname</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Surname" />

                        <span class="text-danger" asp-validation-for="Surname"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">City</label>
                        <input type="text"
                               class="form-control"
                               asp-for="City" />

                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Country</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Country" />

                        <span class="text-danger" asp-validation-for="Country"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Mail</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Mail" />

                        <span class="text-danger" asp-validation-for="Mail"></span>
                    </div>

                    <button class="btn btn-primary mt-4">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>
@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<div class="col-11 mx-auto">
    <div class="card mt-3">
        <h5 class="card-header">Destinations</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>City</th>
                        <th>Price</th>
                        <th>Capacity</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.City</td>
                            <td>@item.Price</td>
                            <td><span class="badge bg-label-primary me-1"> @item.Capacity</span></td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="btn btn-info dropdown-item" asp-controller="Destination" asp-action="DestinationDetail" asp-route-id="@item.DestinationID"><i class="bx bx-search-alt me-1"></i> Detail</a>
                                        <a class="btn btn-success dropdown-item" asp-area="Admin" asp-controller="Destination" asp-action="UpdateDestination" asp-route-id="@item.DestinationID"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="btn btn-danger dropdown-item" asp-area="Admin" asp-controller="Destination" asp-action="DeleteDestination" asp-route-id="@item.DestinationID"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
            <div class="flex justify-content-end">
                <a href="/Admin/Destination/AddDestination" class="btn btn-primary lg m-3">Add</a>

            </div>
        </div>
    </div>
</div>
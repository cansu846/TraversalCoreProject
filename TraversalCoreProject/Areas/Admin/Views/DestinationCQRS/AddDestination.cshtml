@using TraversalCoreProject.CQRS.Commands.DestinationCommands
@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>AddDestination</h1>

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="container col-md-10">
        <div class="card mb-4">
            <h5 class="card-header">Add Destination</h5>

            <div class="card-body">
                <form method="post">
                    <div class="form-group" mb-5">
                        <label class="form-label">City</label>
                        <input type="text"
                               class="form-control"
                               asp-for="City" />
                        <span class="text-danger" asp-validation-for="City"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">DayNigth</label>
                        <input type="text"
                               class="form-control"
                               asp-for="DayNight" />

                        <span class="text-danger" asp-validation-for="DayNight"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Price</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Price" />

                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Capacity</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Capacity" />

                        <span class="text-danger" asp-validation-for="Capacity"></span>
                    </div>
                    <button class="btn btn-primary mt-4">Add</button>
                </form>
            </div>
        </div>
    </div>
</div>
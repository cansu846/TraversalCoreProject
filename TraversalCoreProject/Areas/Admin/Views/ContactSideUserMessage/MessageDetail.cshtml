@model ContactSideUserMessage
@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-11 mx-auto">
    <div class="container col-md-10">
        <div class="card m-5">
            <h5 class="card-header">Message Detail</h5>
            <div class="card-body">
                <form>
                    <div class="form-group" mb-5">
                        <label class="form-label">Name</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Name" />
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Subject</label>
                        <input type="text"
                               class="form-control"
                               asp-for="Subject" />
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Date</label>
                        <input type="text"
                               class="form-control"
                               asp-for="MessageDate" />
                    </div>
                    <div class="form-group" mb-5">
                        <label class="form-label">Content</label>
                        <textarea type="text"
                               class="form-control"
                               asp-for="MessageBody"></textarea>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

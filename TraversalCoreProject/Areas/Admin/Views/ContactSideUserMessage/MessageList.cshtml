@model List<ContactSideUserMessage>
@{
    ViewData["Title"] = "MessageList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}


<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card mt-3">
        <h5 class="card-header">Messages</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Date</th>
                        <th>Delete</th>
                        <th>View</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td>@item.Subject</td>
                            <td>@item.MessageDate</td>
                            <td><a href="">Delete</a></td>
                            <td><a href="">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
           
        </div>
    </div>
</div>


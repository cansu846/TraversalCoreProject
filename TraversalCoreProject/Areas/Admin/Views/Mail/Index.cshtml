@using TraversalCoreProject.Models
@model MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h1 class="card-header">Send Mail</h1>
    <div class="card mt-3 p-5">
    <form method="post">
        @* <div class="form-group">
            @Html.Label("Sender Mail")
            <input type="text" asp-for="SenderMail" class="form-control" />
        </div> *@
        <div class="form-group">
            @Html.Label("Receiver Mail")
            <input type="text" asp-for="ReceiverMail" class="form-control" />
        </div>
        <br />

        <div class="form-group">
            @Html.Label("Subject")
            <input type="text" asp-for="Subject" class="form-control" />
        </div>
        <br />

        <div class="form-group">
            @Html.Label("Message Content")
            <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
        </div>
        <br />

        <button class="btn btn-outline-primary">Send</button>
</form>
    
    </div>
</div>
@model List<Destination>
@{
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

@await Component.InvokeAsync("_DestinationBreadCrumb")
<!--  Work gallery section -->
<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Destinations</h3>
            <div class="row">
                @foreach(var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-6 mt-md-0 mt-lg-5 mt-4">
                        <div class="column">
                            <a href="/Destination/DestinationDetail/@item.DestinationID"><img src="@item.Image" alt="" class="img-fluid"></a>
                            <div class="info">
                                <h4><a href="blog-single.html">@item.City</a></h4>
                                <p>@item.DayNight</p>
                                <div class="dst-btm">
                                    <h6 class="">Start From </h6>
                                    <span>$ @item.Price</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                    
                </div>
            </div>
        </div>
    </section>
   
  


